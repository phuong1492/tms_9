<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size:200 %>
        <% if admin_user?||current_user?(@user) %>
          <%= link_to "Edit profile", "#", class: "edit-btn btn btn-primary" %>
        <%end%>
      </h1>
    </section>
  </aside>
  <div class = "col-md-4 col-md-offset-1">
  	<h1><%= @user.name %></h1>
  	<h2>Email: <%= @user.email %></h2>
  	<h2>Created at: <%= @user.created_at %></h2>
  	<h2>User Type: 
      <% if @user.supervisor? %>
        Supervisor
      <% else %>
        Trainee
      <% end %>
    </h2>
  </div>
</div>