<% unless current_user?(user) %>
  <li>
    <%= gravatar_for user, size: 20 %>
    <%= link_to user.name, [:admin, user] %>
    <%= link_to "Detail", [:admin, user], class: "btn btn-primary" %>
    <%= link_to "Edit", [:edit, :admin, user], class: "btn btn-primary" %>
    <%= link_to "Destroy", "#", data: { confirm: "You sure?" }, 
   	  method: :delete, class: "btn btn-primary" %>
  </li>
<% end %>